/**app.wxss**/
 @import "./zanui-weapp/dist/index.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  margin:0;
  padding:0;
  background: #F7F7F7;
}

/** popup -start */
.popup-example--center {
     border-radius: 4px;
}

.popup-example--right .zan-popup__container {
     top: 0;
     bottom: 0;
}

.popup-example--left .zan-popup__container {
     top: 0;
     bottom: 0;
}

.popup-example--top .zan-popup__container {
     left: 0;
     right: 0;
     padding: 15px;
     background-color: rgba(0, 0, 0, 0.7);
     color: #fff;
     font-size: 16px;
}

.popup-example--top .zan-popup__mask {
     opacity: 0;
}

.popup-example--bottom .zan-popup__container {
     left: 0;
     right: 0;
}

.zan-popup__mask {
     background: #000;
     opacity: 0.4;
}

.zan-popup__container {
     width: 100%;
     height: auto;
     background: #fff;
}
.zan-btns{
     margin:0;
}
.zan-btn {
     border: none;
     line-height: 84rpx;
     height: 84rpx;
     margin: 0;
     font-size: 28rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(153, 153, 153, 1);
}
.zan-cancel{
  width: 200rpx;
  margin: 0; 
text-align: left; 
}
.zan-sure{
  width: 200rpx;
  margin: 0; 
text-align: right; 
}
.zan-top{
     display:flex;
     justify-content: space-between;
}

/** popup -end */