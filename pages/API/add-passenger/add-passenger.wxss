/* pages/API/add-person-message/add-person-message.wxss */

.container {
     height: 100vh;
     box-sizing: border-box;
     margin: 0;
     padding: 0;
     background: #f7f7f7;
     font-family: PingFang-SC-Regular;
}

radio .wx-radio-input {
     margin-right: 5px;
     -webkit-appearance: none;
     outline: 0;
     border: 1px solid #d1d1d1;
     background-color: #fff;
     border-radius: 50%;
     width: 24rpx;
     height: 24rpx;
     position: relative;
}

radio .wx-radio-input.wx-radio-input-checked ::before {
     font: normal normal normal 14px/1 "weui";
     content: "\EA08";
     font-size: 22rpx;
     position: absolute;
     top: 50%;
     left: 50%;
     transform: translate(-50%, -48%) scale(0.73);
     -webkit-transform: translate(-50%, -48%) scale(0.73);
}

.main {
     width: 100%;
     height: auto;
     background: #fff;
     margin-top: 5rpx;
}

.input_box {
     width: 690rpx;
     margin-left: 30rpx;
     height: 98rpx;
     border-bottom: 1rpx solid #eee;
     display: flex;
     font-size: 28rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(51, 51, 51, 1);
     flex-direction: row;
     align-items: center;
     justify-content: flex-start;
}

.input_type {
     width: 690rpx;
     margin-left: 30rpx;
     margin-right: 30rpx;
     height: 98rpx;
     border-bottom: 1rpx solid #eee;
     display: flex;
     font-size: 28rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(51, 51, 51, 1);
     flex-direction: row;
     align-items: center;
     justify-content: space-between;
}

.input_sex {
     width: 690rpx;
     margin-left: 30rpx;
     margin-right: 30rpx;
     height: 140rpx;
     border-bottom: 1rpx solid #eee;
     display: flex;
     font-size: 28rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(51, 51, 51, 1);
     flex-direction: row;
     padding-top: 20rpx;
     padding-bottom: 20rpx;
     box-sizing: border-box;
}

.choice_box {
     width: 300rpx;
     height: 100rpx;
     margin-left: 100rpx;
     display: flex;
     flex-direction: column;
     justify-content: space-between;
}

.choice_sex {
     display: flex;
     font-size: 28rpx;
}

.choice_age {
     display: flex;
     font-size: 28rpx;
}

.check-type {
     width: 16rpx;
     height: 16rpx;
     border-radius: 50%;
     border: 6rpx solid #999;
     margin-right: 6rpx;
}

.uncheck-type {
     width: 20rpx;
     height: 20rpx;
     border-radius: 50%;
     border: 4rpx solid #999;
     margin-right: 6rpx;
}

.checked {
     display: flex;
     align-items: center;
}

.radio-group {
     width: 300rpx;
     display: flex;
     justify-content: space-between;
}

.bottom {
     position: fixed;
     left: 30rpx;
     bottom: 30rpx;
     width: 690rpx;
     height: 88rpx;
     background: #f78210;
     font-size: 32rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(255, 255, 255, 1);
     text-align: center;
     line-height: 88rpx;
}

.radio {
     width: 200rpx;
}

.popup-example--center {
     border-radius: 4px;
}

.popup-example--right .zan-popup__container {
     top: 0;
     bottom: 0;
}

.popup-example--left .zan-popup__container {
     top: 0;
     bottom: 0;
}

.popup-example--top .zan-popup__container {
     left: 0;
     right: 0;
     padding: 15px;
     background-color: rgba(0, 0, 0, 0.7);
     color: #fff;
     font-size: 16px;
}

.popup-example--top .zan-popup__mask {
     opacity: 0;
}

.popup-example--bottom .zan-popup__container {
     left: 0;
     right: 0;
}

.zan-popup__mask {
     background: #000;
     opacity: 0.4;
}

.zan-popup__container {
     width: 100%;
     height: auto;
     background: #fff;
}
.zan-btns{
     margin:0;
}
.zan-btn {
     border: none;
     line-height: 84rpx;
     height: 84rpx;
     margin: 0;
     font-size: 28rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(153, 153, 153, 1);
}
.zan-cancel{
  width: 200rpx;
  margin: 0; 
text-align: left; 
}
.zan-sure{
  width: 200rpx;
  margin: 0; 
text-align: right; 
}
.zan-top{
     display:flex;
     justify-content: space-between;
}
