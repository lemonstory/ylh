<view class="container">
     <view class="nav">
          <view class="taga {{currentItem==item.id?'active-tag':''}}" wx:for="{{category}}" data-category_id="{{item.id}}" bindtap="tagChooseCate" wx:key="item">
               {{item.name}}
          </view>
     </view>

     <!--国家详情选项卡的展示-->
     <view class="nav-right" wx:for="{{category}}">
          <view class="lii">{{category[currentItem].name}}</view>
          <view class="ul">
               <!-- {{category[currentItem].id}} -->
               <view class="li" wx:for="{{areaList}}" data-id="{{item.id}}" bindtap="choseCountry" wx:key="item" wx:key="item">
                    <image src="{{item.image}}"></image>
                    <view class="country">{{item.name}}</view>
                    <!-- <view class="english">France</view> -->
               </view>
          </view>


          <view class="lii">全部目的地</view>
          <view class="addname">
               <view class="li" wx:for="{{mapping}}" wx:key="item">
                
               </view>
          </view>
          <view class="nav-bottom">
               推荐线路
          </view>
          <view class="list">
               <view class="addul" wx:for="{{LineList}}" bindtap="bindLineDetail" wx:key="item" data-id='{{item.id}}'>
                    <view class="addli">
                         <view class="liimg">
                              <image src="{{item.image}}"></image>
                         </view>
                         <view class="litext">{{item.title}}</view>
                         <view class="back">
                              <image src="http://image.365zhiding.com/wxapp/20171114/1.png"></image>
                         </view>
                    </view>
                    <view class="line"></view>
               </view>
          </view>
     </view>
</view>