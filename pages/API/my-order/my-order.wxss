.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #f7f7f7;
}
.main{
  margin-top: 5rpx;
  height:100%;
  width: 100%;

}
.tab-h {
  height: 90rpx;
  width: 100%;
  box-sizing: border-box; 
  line-height: 90rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  color:rgba(51,51,51,1);
  justify-content: space-between;
  background: #fff;
  margin-top: 5rpx;
  overflow: scroll;
  white-space: nowrap; 
  display: flex;
}
.tab-item {
 display: inline-block;
 margin-left: 50rpx;
 margin-right: 50rpx;
 padding-left: 50rpx;
 padding-right: 50rpx;
 width:auto;
 height:86rpx;
}

.tab-item.active{
border-bottom: 5rpx solid #f60;
color:#f60;

}

