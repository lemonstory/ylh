/* pages/API/passport/passport.wxss */

.container {
     height: 100%;
     width: 100%;
     display: flex;
     flex-direction: column;
     align-items: center;
     box-sizing: border-box;
     margin: 0;
     padding: 0;
     background: #fff;
     overflow: hidden;
}

.section {
     width: 100%;
     height: 100vh;
     border-top: 2rpx solid #eee;
     padding: 30rpx;
     box-sizing: border-box;
}

.id-box {
     width: 100%;
     height: auto;
     display: flex;
     justify-content: center;
}

.idcard {
     width: 570rpx;
     height: 300rpx;
     background: red;
}

.camera-box {
     width: 100%;
     height: auto;
     display: flex;
     justify-content: center;
     margin-top: 30rpx;
     margin-bottom: 30rpx;
}
.camera{
     width: 570rpx;
     height: 300rpx;
     border:3rpx solid #f60;
     border-radius: 10rpx;
}

.bottom{
     width:690rpx;
     height:88rpx;
     background:#F78210;
     border-radius: 10rpx;
     position: fixed;
     bottom:30rpx;
     left:30rpx;
     font-size:32rpx;
     font-family:PingFang-SC-Regular;
     color:rgba(255,255,255,1);
     text-align:center;
     line-height: 88rpx;
     }
