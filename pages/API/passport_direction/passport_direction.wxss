/* pages/API/passport_direction/passport_direction.wxss */

.container {
     height: 100%;
     width: 100%;
     display: flex;
     flex-direction: column;
     align-items: center;
     box-sizing: border-box;
     margin: 0;
     padding: 0;
     background: #fff;
     overflow: hidden;
}

.section {
     width: 100%;
     height: 100vh;
     border-top: 2rpx solid #eee;
     padding: 30rpx;
     box-sizing: border-box;
}

.prompt {
     width: 100%;
     height: auto;
     display: flex;
     justify-content: center;
}

.prompt_message {
     font-size: 26rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(51, 51, 51, 1);
}

.camera-box {
     width: 100%;
     height: auto;
     display: flex;
     justify-content: center;
     margin-top: 200rpx;
     margin-bottom: 30rpx;
}

.camera {
     width: 570rpx;
     height: 300rpx;
     border: 3rpx solid #f60;
     border-radius: 10rpx;
}

.bottom {
     width: 570rpx;
     height: auto;
     position: fixed;
     bottom: 60rpx;
     left: 90rpx;
     font-size: 32rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(255, 255, 255, 1);
     text-align: center;
     line-height: 88rpx;
}


.icon_box {
     width: 100%;
     height: auto;
     display: flex;
     justify-content: space-between;
}

.icon_box1 {
     width: 100%;
     height: auto;
     display: flex;
     justify-content: center;
}
