<!--pages/API/visa-find/visa-find.wxml-->
<import src="/zanui-weapp/dist/toast/index.wxml" />
<view class="container">
     <view class="main">
         <input id="mobile" bindinput='bindInputValueChange' placeholder='手机号' placeholder-style='font-size:28rpx;font-family:PingFang-SC-Regular;color:rgba(153,153,153,1);' value='{{mobile}}'></input>
         <button class="yanzhen" bindtap='handTapGetVcode'>{{vcodeHintStr}}</button>

         <input id="msgCode" bindinput='bindInputValueChange' placeholder='验证码' placeholder-style='font-size:28rpx;font-family:PingFang-SC-Regular;color:rgba(153,153,153,1);' value='{{msgCode}}'></input>
         </view>
     <button class="confirm" bindtap='handleTapBind'>绑定</button>
</view>
<!-- 直接使用 zan-toast 模板，并且直接传入 zanToast -->
<template is="zan-toast" data="{{ zanToast }}"></template>