/* pages/API/order-sou/order-sou.wxss */

.container {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  list-style: none;
  display: flex;
  background: #f7f7f7;
  height: 100vh;
}

.main {
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 5rpx;
}

.nav {
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(51, 51, 51, 1);
  align-items: center;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}

.nav-left {
  display: flex;
}

.img {
  width: 24rpx;
  height: 21rpx;
  margin-left: 19rpx;
}

.img image {
  width: 100%;
  height: 100%;
}

.search {
  display: flex;
  align-items: center;
  margin-top: 5rpx;
}

#myInput {
  width: 580rpx;
  height: 68rpx;
  background: #e5e5e5;
  border-radius: 10rpx;
  display: flex;
  align-content: center;
  box-sizing: border-box;
  margin-left: 20rpx;
  margin-top: 10rpx;
  position: relative;
}

.search-icon{
  height:32rpx;
  width:32rpx;
  position: absolute;
  top:32rpx;
  left:40rpx;
}
.search-icon image{
     width:100%;
     height:100%;
}
.cancel {
  width: 120rpx;
  height: 68rpx;
  border: 1rpx solid #eee;
  margin-left: 10rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(102, 102, 102, 1);
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  justify-content: center;
  border-radius: 10rpx;
}

/*订单号开始  */

.route {
  width: 100%;
  height: auto;
  background: #fff;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 30rpx;
}

.route-top {
  display: flex;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(102, 102, 102, 1);
  justify-content: space-between;
}

.route-center {
  margin-top: 30rpx;
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.route-img {
  width: 150rpx;
  height: 100rpx;
}

.route-img image {
  width: 100%;
  height: 100%;
}

.center-text {
  display: flex;
  flex-direction: column;
  width: auto;
  height: auto;
  margin-left: 20rpx;
}

.text1 {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(51, 51, 51, 1);
  text-overflow: ellipsis;
  display: flex;
  white-space: nowrap;
}
.all-text2{
  display: flex;
  justify-content: space-between;
  width:521rpx;
}
.text2 {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(102, 102, 102, 1);
  width: auto;
  margin-top: 5rpx; 
  display: flex;
}

.text3 {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(102, 102, 102, 1);
}

/*订单号结束  */

/*显现卡  */
.hidden-box{
  width: 750rpx;
  height:100vh;
  position:absolute;
  background: #000;
  opacity: 0.4;
  z-index: 99;
}
.hidden{
width: 750rpx;
height:auto;
background: #fff;
position: absolute;
z-index: 999;
padding-left:60rpx;
padding-right: 60rpx;
}
.hidden-li{
  width: 630rpx;
  height:84rpx;
  border-bottom:1rpx solid #eee;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  color:#333333;
  line-height: 84rpx;

}
.hide{
 display:none;
}
.show{ 
 display: block;
}
.rotate{
transform: rotate(180deg);
}
.choosedbtn{
  color:#FF6600;
}