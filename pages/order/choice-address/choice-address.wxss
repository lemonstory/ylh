/* pages/API/choice-address/choice-address.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #f7f7f7;
}

.main-box {
  width: 100%;
  height: auto;
  margin-top: 5rpx;
  background: #fff;
}

.address-ul {
  width: 690rpx;
  height: auto;
  border-bottom: 1rpx solid #eee;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-top: 10rpx;
  overflow: hidden;
}

.ul-top {
  display: flex;
  align-items: center;
  height: 64rpx;
  justify-content: space-between;

}

.check {
  width: 32rpx;
  height: 32rpx;
  display: flex;
}

.top-name {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(51, 51, 51, 1);
  margin-left: 31rpx;
  width: auto;
 
}

.top-tell {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(153, 153, 153, 1);
  margin-left: 40rpx;
}

.xiugai {
  width: 32rpx;
  height: 32rpx;
  z-index: 999;
}

.ul-bottom {
  margin-left: 63rpx;
  width: auto;
  height: 64rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(102, 102, 102, 1);

}

.bottom {
  display: flex;
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
}

.bottom-left {
  width: 50%;
  height: 100%;
  background: #fff;
  font-size: 32rpx;
  font-family: PingFang-SC-Regular;
  text-align: center;
  line-height: 98rpx;
}

.bottom-right {
  width: 50%;
  height: 100%;
  background: #f78210;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  font-size: 32rpx;
  font-family: PingFang-SC-Regular;
}


 .item{
    position: relative;
    height: 120rpx;
    line-height: 64rpx;
    overflow: hidden;
} 
.item:last-child{
    border-bottom: 2rpx solid #eee;
}
.inner{
    position: absolute;
    top:0;
}
 .inner.txt{
    background-color: #fff;
    width: 100%;
    transition: left 0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
} 
.inner.del{
    background-color: #e64340;
    width: 180rpx;
    text-align: center;
    right: 0;
    color: #fff;
    height:130rpx;
    line-height: 130rpx;
 
}
 .remove{  
    width: 60rpx;  
    height: 100%;  
    background-color: red;  
    display: flex;  
    justify-content: center;  
    align-items: center; 
    top: 0;
    position: absolute; 
    right:-60rpx; 
}   