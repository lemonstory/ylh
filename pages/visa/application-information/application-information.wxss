.container {
     height: 100vh;
     display: flex;
     box-sizing: border-box;
     margin: 0;
     padding: 0;
     background: #fff;
}

.data-information {
     width: 100%;
     height: 84rpx;
     background: #fff;
     border-top: 1rpx solid #eee;
     border-bottom: 1rpx solid #eee;
     padding-left: 30rpx;
     padding-right: 30rpx;
     box-sizing: border-box;
     align-items: center;
     display: flex;
     justify-content: space-between;
     font-size: 24rpx;
     color: rgba(102, 102, 102, 1);
}

.ziliao-box {
