/* pages/visa/choice-date/choice-date.wxss */
.page {
     height: auto;
     padding: 0;
     width: 100%;
     margin:0;
     box-sizing: border-box;
     overflow: hidden;
}

.calendar-panel {
     width: 100%;
     height: 78rpx;
     background: #fff;
     display: flex;
     border-top:1rpx solid #eee;
}

.month {
     width: 200rpx;
     height: 78rpx;
     /* background: rgba(243, 244, 246, 1); */
     background: #fff;
     font-size: 20rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(51, 51, 51, 1);
     display: flex;
     align-items: center;
     justify-content: center;
     position: relative;
}


.price {
     color: #f60;
}

.calendar-header {
     width: 750rpx;
     height: 94rpx;
     position: absolute;
     top: 68rpx;
     display: flex;
     justify-content: space-around;

}
.xingqi {
     width: 100%;
     height: 84rpx;
     position: absolute;
     top: 10rpx;
     display: flex;
     justify-content: space-around;
     align-items: center;
     font-family: PingFang-SC-Regular;
     color: rgba(51, 51, 51, 1);
     font-size: 24rpx;
     background: #BCBCBC;

}

.calendar-body {
     width: 100%;
     height: auto;
     margin-top: 90rpx;
     display: flex;
     justify-content: space-around;
     flex-wrap: wrap;
     border-bottom: 1rpx solid #eee;
}

.calender-body-date-week {
     width: 750rpx;
     display: flex;
     justify-content: space-around;
     flex-wrap: wrap;
     height: 100rpx;
     align-items: center;
}

.calender-body-date-week .date {
     width: 78rpx;
     height: 79rpx;
     display: flex;
     align-items: center;
     font-size: 32rpx;
     font-family: PingFang-SC-Regular;
     color: rgba(51, 51, 51, 1);
     flex-direction: column;
     justify-content: space-around;
     text-align: center;
}

.calender-body-date-week .date-current {
     background: #f60;
     color: white;
}

.calender-body-date-week .active {
     display: block;
}

.calender-body-date-week .hidden {
     background: #fff;
     color: #fff;
}