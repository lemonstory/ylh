<!--pages/visa/idcard-back/idcard-back.wxml-->
<view class="container">
     <view class="idcard-img">
     <image src="{{imageSrc}}" mode="widthFit"></image>
     </view>
     <view class="section" style='margin-bottom:120rpx;'>
          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>签发机关：</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.issue}}</view>
          </view>
          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>签发日期：</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.start_date}}</view>
          </view>
          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>有效期至：</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.end_date}}</view>
          </view>
     </view>
</view>

<view class="bottom">
     <view class="bottom-left">重新拍摄</view>
     <view class="bottom-right">保存并提交</view>
</view>