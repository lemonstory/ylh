<!--pages/visa/idcard-face/idcard-face.wxml-->
<view class="container">
     <view class="idcard-img">
     <image src="{{imageSrc}}" mode="widthFit" style='width:750rpx;'></image>
     </view>
     <view class="section" style='margin-bottom:120rpx;'>
          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>中文姓名</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.name}}</view>
          </view>

          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>身份证号码：</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.num}}</view>
          </view>


          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>性别：</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.sex}}</view>
          </view>

          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>民族：</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.nationality}}</view>
          </view>

          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>出生日期：</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.birth}}</view>
          </view>

          <view class="message-box">
               <view style='font-size:24rpx;color:rgba(153,153,153,1);'>地址：</view>
               <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{userInfo.address}}</view>
          </view>
     </view>
</view>
<view class="bottom">
     <view class="bottom-left">重新拍摄</view>
     <view class="bottom-right">保存并提交</view>

</view>