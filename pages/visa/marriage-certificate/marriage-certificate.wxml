<!--pages/visa/marriage-certificate/marriage-certificate.wxml-->
<view class="container">
  <view class="idcard-img">
    <image src="{{imageSrc}}" mode="widthFit" style='width:750rpx;'></image>
  </view>
  <view class="section" style='margin-bottom:120rpx;'>
    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>持证人：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.holder}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>登记日期：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.registrationDate}}</view>
    </view>


    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>结婚证字号：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.number}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>姓名：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.name1}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>性别：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.sex1}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>国籍：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.nationality1}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>出生日期：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.birthday1}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>身份证件号：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.IDCard1}}</view>
    </view>

   <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>姓名：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.name2}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>性别：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.sex2}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>国籍：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.nationality2}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>出生日期：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.birthday2}}</view>
    </view>

    <view class="message-box">
      <view style='font-size:24rpx;color:rgba(153,153,153,1);'>身份证件号：</view>
      <view style='font-size:28rpx;color:rgba(51,51,51,1);margin-top:20rpx'>{{certificateInfo.IDCard2}}</view>
    </view>
  </view>
</view>
<view class="bottom">
  <view class="bottom-left">重新拍摄</view>
  <view class="bottom-right">保存并提交</view>

</view>