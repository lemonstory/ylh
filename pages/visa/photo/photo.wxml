<!--pages/visa/photo/photo.wxml-->
<view class="container">
     <view class="section">
          <view class="camera-box" bindtap='bindTapChosePhoto'>
               <view class="camera">
                    <image src='http://image.365zhiding.com/wxapp/20180108/photoshop.png'></image>
               </view>
          </view>


          <view class="photo_info" style='color:#0076FF;font-size:28rpx;'>
               <view>拍摄指南</view>
               <image src='http://image.365zhiding.com/wxapp/20180108/question.png' style='width:32rpx;height:32rpx;display:flex;margin-right:10rpx'></image>
          </view>



          <view class="means_rules" style='margin-top:60rpx'>
               <view class="rules_title" style='color:#333;font-size:28rpx;margin-top:30rpx'>资料要求</view>
               <view style='color:#333;font-size:24rpx;margin-top:30rpx'>· 注意光线均匀</view>
               <view style='color:#333;font-size:24rpx;margin-top:19rpx'>· 不要佩戴眼镜</view>
               <view style='color:#333;font-size:24rpx;margin-top:19rpx'>· 正对镜头，双耳露出</view>
               <view style='color:#333;font-size:24rpx;margin-top:19rpx'>· 注意纯白墙做背景</view>
               <view style='color:#333;font-size:24rpx;margin-top:19rpx'>· 避免衣服与背景色相同</view>
          </view>
          <view class="bottom" bindtap='bindPassPortDirection'>确定</view>
     </view>
</view>